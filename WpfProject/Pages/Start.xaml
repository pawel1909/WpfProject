<UserControl x:Class="WpfProject.Pages.Start"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfProject.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1366">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Nazwa" Background="Gray" Margin="20px" Grid.Row="0" Grid.Column="1" FontSize="36" FontWeight="Bold" TextAlignment="Center" >Witaj</TextBlock>
        <TextBlock x:Name="Ilosc" Text="Masz" Background="Chartreuse" Margin="20" Grid.Column="1" Grid.Row="1" FontSize="36" TextAlignment="Left" FontWeight="Bold"></TextBlock>

    </Grid>
</UserControl>
